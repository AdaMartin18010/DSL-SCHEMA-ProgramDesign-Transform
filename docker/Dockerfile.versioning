FROM python:3.10-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY code/requirements.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制源代码
COPY code/ /app/code/

# 设置工作目录
WORKDIR /app/code

# 暴露端口
EXPOSE 8000

# 启动命令
CMD ["uvicorn", "schema_versioning.api:app", "--host", "0.0.0.0", "--port", "8000"]
